<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppCadastro.ProdutosPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Padding="20,10" ColumnDefinitions="*,Auto">
            <ImageButton 
                Source="caixa.png"
                HeightRequest="40"
                WidthRequest="40"
                BorderColor="Transparent"
                HorizontalOptions="Start"
                BackgroundColor="Transparent"
                Clicked="CaixaButton_Clicked"/>

            <ImageButton
                Grid.Column="1"
                WidthRequest="40"
                HeightRequest="40"
                BorderColor="Transparent"
                CornerRadius="20"
                Clicked="Button_Clicked"
                BackgroundColor="{DynamicResource PageBackgroundColor}"
                Source="{DynamicResource AppSolImage}"/>
        </Grid>

        <VerticalStackLayout Grid.Row="1" 
                            Spacing="15"
                            Padding="20,0">

            <Label Text="Lista de Produtos" 
                   FontSize="20" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center" 
                   Margin="0,10"
                   TextColor="{DynamicResource AppTextColor}"/>

            <CollectionView x:Name="listaProdutosView">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="Gray" 
                               BackgroundColor="{DynamicResource AppButtonColor}" 
                               CornerRadius="15" 
                               Padding="15" 
                               Margin="5,8"
                               HasShadow="True">
                            <VerticalStackLayout Spacing="6">
                                <Label Text="{Binding nomeProd}" 
                                       FontAttributes="Bold" 
                                       FontSize="16" 
                                       TextColor="{DynamicResource AppTextColor}"/>

                                <Label Text="{Binding descProd}" 
                                       FontSize="14"
                                       TextColor="{DynamicResource AppTextColor}"/>

                                <Label Text="{Binding categoriaProd}" 
                                       FontSize="14"
                                       TextColor="{DynamicResource AppTextColor}" />

                                <Label Text="{Binding precoProd, StringFormat='PreÃ§o: {0:C}'}" 
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="{DynamicResource AppTextColor}" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>

        <Button x:Name="btnVoltar2"
                Text="Voltar"
                Grid.Row="2"
                Clicked="btnVoltar_Clicked2"
                HeightRequest="50"
                CornerRadius="25"
                FontSize="14"
                Margin="20,0,20,20"
                HorizontalOptions="Fill"
                TextColor="{DynamicResource AppTextColor}"
                BackgroundColor="{DynamicResource AppButtonColor}"/>
    </Grid>
</ContentPage>
